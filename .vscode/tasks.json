{
    "version": "2.0.0",
    "linux": {
        "type": "shell",
        "options": {
            "cwd": "${workspaceFolder}"
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": true,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": false
        },
    },
    "problemMatcher": [],
    "tasks": [
        {
            "label": "Build HTML",
            "command": "make",
            "args": [ "html" ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/docs"
            }
        }
    ]
}
